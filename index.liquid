---
pagination:
  data: collections.posts
  size: 4
  alias: posts
layout: layout.liquid
---

{% for post in posts %}

  <div class="post">
    <h1>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      <span>{{ post.date | date: "%B %d, %Y" }}</span>
    </h1>

    <p>{{ post.templateContent }}</p>
  </div>

{% endfor %}